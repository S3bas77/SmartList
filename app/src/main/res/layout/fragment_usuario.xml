<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card -->
    <LinearLayout
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toBottomOf="@id/tvTitleProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información del usuario"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: Cargando..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: Cargando..."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Editar Nombre"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_green"/>

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Cerrar Sesión"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_red"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
