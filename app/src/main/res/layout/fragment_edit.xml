<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Título de la lista *"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Descripción (opcional)"
            android:layout_marginBottom="24dp" />

        <!-- SECCIÓN PRODUCTOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Productos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Formulario para nuevo producto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Nombre del producto"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etProductQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cantidad"
                android:inputType="number"
                android:padding="12dp"
                android:text="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Agregar Producto"
            android:layout_marginBottom="16dp"/>

        <!-- Lista de productos agregados -->
        <TextView
            android:id="@+id/tvProductsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:background="#f5f5f5"
            android:padding="12dp"
            android:text="No hay productos agregados..."
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Contador de productos -->
        <TextView
            android:id="@+id/tvProductCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 0 productos"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar Lista"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>